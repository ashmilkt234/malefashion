<%- include('../partials/admin/header') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="/css/addcategory.css">
<link rel="stylesheet" href="/css/dashboard.css">

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   
    

            <div class="content">
                
  <div class="form-container">
  <button class="back-btn" onclick="goBack()">← Back</button>
    <h2 class="form-title">Add Category</h2>
<form id="addCategoryForm">

  <div class="form-group">
    <label>Category</label>
    <input type="text" id="name" name="name" placeholder="Enter category name" autocomplete="off">
    <small class="error" id="nameError"></small>
  </div>

  <div class="form-group">
    <label>Description</label>
    <input type="text" id="description" name="description" placeholder="Enter description">
    <small class="error" id="descError"></small>
  </div>
  <div class="form-check mt-3">
  <input
    class="form-check-input"
    type="checkbox"
    id="hasSize"
    name="hasSize"
    value="true"
  >
  <label class="form-check-label" for="hasSize">
    This category has sizes
  </label>
</div>

  <div class="form-group">
    <label>Category Offer (%)</label>
    <input type="number" id="categoryOffer" name="categoryOffer" min="0" max="90">
    <small class="error" id="offerError"></small>
  </div>

  <button type="submit" class="btn-submit">Add Now</button>
</form>
    </div>
     </div>




<script>
const form = document.getElementById('addCategoryForm');
const submitBtn = document.querySelector('.btn-submit');
const nameInput = document.getElementById('name');
const descInput = document.getElementById('description');
const hasSize = document.getElementById("hasSize").checked;
const offerInput = document.getElementById('categoryOffer');
function setError(input, message, errorId) {
    input.classList.add('error-input');
    input.classList.remove('success-input');
    document.getElementById(errorId).innerText = message;
}

function setSuccess(input, errorId) {
    input.classList.remove('error-input');
    input.classList.add('success-input');
    document.getElementById(errorId).innerText = '';
}

// Live validation
nameInput.addEventListener('input', () => {
    if (nameInput.value.trim().length < 3) {
        setError(nameInput, 'Minimum 3 characters', 'nameError');
    } else {
        setSuccess(nameInput, 'nameError');
    }
});

descInput.addEventListener('input', () => {
    if (!descInput.value.trim()) {
        setError(descInput, 'Description is required', 'descError');
    } else {
        setSuccess(descInput, 'descError');
    }
});

offerInput.addEventListener('input', () => {
    const value = Number(offerInput.value);
    if (value < 0 || value > 90) {
        setError(offerInput, 'Offer must be 0–90', 'offerError');
    } else {
        setSuccess(offerInput, 'offerError');
    }
});

// Submit
form.addEventListener('submit', async (e) => {
    e.preventDefault();
    submitBtn.disabled = true;

    const name = nameInput.value.trim();
    const description = descInput.value.trim();
    const offer = Number(offerInput.value) || 0;

    let valid = true;

    if (name.length < 3) {
        setError(nameInput, 'Minimum 3 characters', 'nameError');
        valid = false;
    }

    if (!description) {
        setError(descInput, 'Description is required', 'descError');
        valid = false;
    }

    if (offer < 0 || offer > 90) {
        setError(offerInput, 'Offer must be 0–90', 'offerError');
        valid = false;
    }

    if (!valid) {
        submitBtn.disabled = false;
        return;
    }

    try {
        const response = await fetch('/admin/addCategory', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ name, description, categoryOffer: offer })
        });

        const result = await response.json();

        if (response.ok) {
            Swal.fire('Success', result.message, 'success')
                .then(() => window.location.href = '/admin/category');
        } else {
            Swal.fire('Error', result.error || 'Something went wrong', 'error');
        }
    } catch {
        Swal.fire('Error', 'Server error', 'error');
    } finally {
        submitBtn.disabled = false;
    }
});

body: JSON.stringify({
  name,
  description,
  categoryOffer: offer,
  hasSize
})


 function goBack() {
            window.history.back();
        }

</script>


</body>
</html>