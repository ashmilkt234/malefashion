<%- include('../partials/admin/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
 
    
</head> 
<body>
    

    <!-- =============== MAIN CONTENT =============== -->
    <main class="main-content">
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-title">Total User</div>
                        <div class="stat-value">40,689</div>
                        <div class="stat-change up">
                            <i class="fas fa-arrow-up"></i>
                            8.5% Up from yesterday
                        </div>
                    </div>
                    <div class="stat-icon user">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-title">Total Order</div>
                        <div class="stat-value">10293</div>
                        <div class="stat-change up">
                            <i class="fas fa-arrow-up"></i>
                            1.3% Up from past week
                        </div>
                    </div>
                    <div class="stat-icon order">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-title">Total Sales</div>
                        <div class="stat-value">$89,000</div>
                        <div class="stat-change down">
                            <i class="fas fa-arrow-down"></i>
                            4.3% Down from yesterday
                        </div>
                    </div>
                    <div class="stat-icon sales">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <div>
                        <div class="stat-title">Total Pending</div>
                        <div class="stat-value">2040</div>
                        <div class="stat-change up">
                            <i class="fas fa-arrow-up"></i>
                            1.8% Up from yesterday
                        </div>
                    </div>
                    <div class="stat-icon pending">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="charts-section">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Sales Details</h3>
                    <select class="dropdown">
                        <option>October</option>
                        <option>November</option>
                        <option>December</option>
                    </select>
                </div>
                <div class="chart-container">
                    <svg class="chart-svg" viewBox="0 0 800 260">
                        <defs>
                            <linearGradient id="gradient" x1="0%" y1="0%" x2="0%" y2="100%">
                                <stop offset="0%" style="stop-color:black;stop-opacity:0.3" />
                                <stop offset="100%" style="stop-color:black;stop-opacity:0.05" />
                            </linearGradient>
                        </defs>
                        <path class="chart-area" d="M50,200 L120,180 L190,160 L260,140 L330,120 L400,100 L470,90 L540,110 L610,130 L680,150 L750,170 L750,220 L50,220 Z"/>
                        <path class="chart-line" d="M50,200 L120,180 L190,160 L260,140 L330,120 L400,100 L470,90 L540,110 L610,130 L680,150 L750,170"/>
                        <circle class="chart-point" cx="470" cy="90"/>
                        <text x="470" y="75" text-anchor="middle" font-size="12" fill="#3b82f6" font-weight="600">$4,364</text>
                    </svg>
                </div>
            </div>

            <div class="chart-card">
                <div class="print-section">
                    <h3 class="print-title">Print sales report</h3>
                    <select class="print-dropdown">
                        <option>October</option>
                        <option>November</option>
                        <option>December</option>
                    </select>
                    <div class="print-buttons">
                        <button class="print-btn print-pdf">Print pdf</button>
                        <button class="print-btn print-excel">print excel</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Table -->
       
    </main>

   
</body>
</html>

<%- include('../partials/admin/footer') %>
