<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Modern Login</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/login.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

<div class="login-container">
  <div class="form-section">
      
    <h2 class="login-heading">Login to Your Account</h2>
    <h1>Welcome back</h1>
    <p>Don't have an account? <a href="/signup">Create an account</a></p>
    
    <!-- LOGIN FORM -->
    <form action="/login" method="POST">
      <input type="email" name="email" placeholder="Email" required>
      
      <div class="password-wrapper">
        <input type="password" name="password" id="password" placeholder="Password" required>
        <i class="fa-solid fa-eye toggle-password" id="togglePassword"></i>
      </div>

      <div class="options">
        <a href="/forgot-password">Forgot password?</a>
      </div>

      <!-- ✅ LOGIN SUBMIT BUTTON ADDED -->
      <button type="submit" class="login-btn">Login</button>
    </form>

    <!-- ✅ GOOGLE BUTTON MOVED OUTSIDE FORM -->
    <button class="google-btn" onclick="window.location.href='/auth/google'">
      <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google">
      Continue with Google
    </button>

  </div>

  <div class="image-section"></div>
</div>

<script>
  // Password toggle show/hide
  const togglePassword = document.getElementById("togglePassword");
  const passwordInput = document.getElementById("password");

  togglePassword.addEventListener("click", function () {
    const type = passwordInput.type === "password" ? "text" : "password";
    passwordInput.type = type;
    this.classList.toggle("fa-eye");
    this.classList.toggle("fa-eye-slash");
  });

  // SweetAlert display on login success or error
  document.addEventListener("DOMContentLoaded", function () {
    <% if (typeof success !== "undefined" && success) { %>
      Swal.fire({
        icon: 'success',
        title: 'Success',
        text: "<%= success %>",
        showConfirmButton: false,
        timer: 2000
      });
    <% } %>

    <% if (typeof error !== "undefined" && error) { %>
      Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: "<%= error %>",
        confirmButtonText: 'OK'
      });
    <% } %>
  });

  
</script>

</body>
</html>
