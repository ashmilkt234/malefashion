<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Modern Login</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/login.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

<div class="login-container">
  <div class="form-section">
      
    <h2 class="login-heading">Login to Your Account</h2>
    <h1>Welcome back</h1>
    <p>Don't have an account? <a href="/signup">Create an account</a></p>
    
    <!-- LOGIN FORM -->
 
<form onsubmit="login(event)">
  <input type="email" id="email" placeholder="Email" required>

  <div class="password-wrapper">
    <input type="password" id="password" placeholder="Password" required>
    <i class="fa-solid fa-eye toggle-password" id="togglePassword"></i>
  </div>

  <button type="submit" class="login-btn">Login</button>
</form>

    <!-- âœ… GOOGLE BUTTON MOVED OUTSIDE FORM -->
    <button class="google-btn" onclick="window.location.href='/auth/google'">
      <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google">
      Continue with Google
    </button>

  </div>

  <div class="image-section"></div>
</div>

<script>


   async function login(e) {
  e.preventDefault();

  const res = await fetch('/login', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({
      email: document.getElementById('email').value,
      password: document.getElementById('password').value
    })
  });

  const data = await res.json();

  if (data.success) {
    Swal.fire({
      icon: 'success',
      title: 'Success',
      text: data.message,
      timer: 1500,
      showConfirmButton: false
    }).then(() => {
      window.location.href = "/";
    });
  } else {
    Swal.fire({
      icon: 'error',
      title: 'Oops',
      text: data.message
    });
  }
}

</script>

</body>
</html>
