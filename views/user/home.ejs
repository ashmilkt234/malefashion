        <!-- Product Section Begin -->
        <section class="product spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="filter__controls">
                            <li class="active" data-filter="*">Best Sellers</li>
     
                            <li data-filter=".hot-sales">Hot Sales</li>
                        </ul>
                    </div>
                </div>

                <div class="row product__filter">
                    <% for (let i=0; i < products.length; i++) { %>
                        <div class="col-lg-3 col-md-6 col-sm-6 mix new-arrivals">
                            <div class="product__item">
                                <div class="product__item__pic set-bg">
                          <a href="/productDetails/<%= products[i]._id %>">
                                        <img src="/uploads/product-images/<%= products[i].productImage[0] %>"
                                        alt="<%= products[i].productName %>"/>
                                      
                          </a>
                                 
                   

                                <span class="label">New</span>
                                    <ul class="product__hover">
                                        <li><a href="#"><img src="img/icon/heart.png" alt=""></a></li>
                                        <li><a href="#"><img src="img/icon/compare.png" alt=""> <span>Compare</span></a>
                                        </li>
                                        <li><a href="#"><img src="img/icon/search.png" alt=""></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6>
                                        <%= products[i].productName %>
                                    </h6>
                                    <a href="#" class="add-cart">+ Add To Cart</a>
                                    <div class="rating">
                                        <% let rating = products[i].rating || 0; %>
                                        <% for (let j=0; j < 5; j++) { %>
                                              <% if (j < rating) { %>
      <i class="fa fa-star" style="color: gold;"></i> <!-- filled star -->
    <% } else { %>
      <i class="fa fa-star-o" style="color: gold;"></i> <!-- empty star -->
    <% } %>

                                            <% } %>
                                    </div>
                                    <h5>$<%= products[i].salesPrice %>
                                    </h5>
                                </div>
                            </div>

                        </div>
                        <% } %>
                </div>
            </div>
                

