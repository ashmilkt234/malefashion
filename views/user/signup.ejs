<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Signup</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="/css/signup.css">
  <link rel="shortcut icon" href="/img/hero/cr.jpg" type="image/png">
  <style>
    .password-container {
      position: relative;
      width: 100%;
    }

    .password-container input {
      width: 100%;
      padding-right: 60px; /* space for the toggle */
      height: 45px;
      font-size: 16px;
    }

    .toggle-password {
      position: absolute;
      right: 32px;
      top: 18px;
      transform: translateY(-50%);
      cursor: pointer;
      color: black;
      font-weight: 100;
      user-select: none;
      font-size: 16px;
    }

    .error-message {
      color: red;
      font-size: 14px;
      margin-bottom: 10px;
      display: none;
    }
  </style>
</head>
<body>
<div class="container">
  <div class="form-section">
    <div class="logo">
      <!-- Logo Image -->
      <img src="/img/hero/cr.jpg" alt="Logo" width="100" height="100">
    </div>

    <h2>Create an account</h2>

    <form id="signform" action="/signup" method="POST" novalidate>
      <input type="text" id="name" name="name" placeholder="Full Name" minlength="3" maxlength="30"/>
      <div id="error1" class="error-message"></div>

      <input type="email" id="email" name="email" placeholder="Email Address" />
      <div id="error2" class="error-message"></div>

      <input type="tel" id="phone" name="phone" placeholder="Phone Number" />
      <div id="error3" class="error-message"></div>

      <!-- Password with toggle -->
      <div class="password-container">
        <input type="password" id="password" name="password" placeholder="Password" />
        <span class="toggle-password" id="togglePassword">SHOW</span>
      </div>
      <div id="error4" class="error-message"></div>

      <!-- Confirm Password with toggle -->
      <div class="password-container">
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" />
        <span class="toggle-password" id="toggleConfirm">SHOW</span>
      </div>
      <div id="error5" class="error-message"></div>

      <% if (typeof message !== "undefined" && message.length > 0) { %>
        <script>
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '<%= message %>',
            confirmButtonColor: '#d33'
          });
        </script>
      <% } %>

      <button type="submit">Sign Up</button>
    </form>


    <button class="google-btn" onclick="window.location.href='/auth/google'">
      <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google" />
      Continue with Google
    </button>

    <div class="footer-text">
      Already have an account? <a href="/login">Log in</a>
    </div>
  </div>

  <div class="image-section">
    <!-- Add an image or leave empty -->
  </div>
</div>

<script>
  const nameid = document.getElementById('name');
  const emailid = document.getElementById('email');
  const phoneid = document.getElementById('phone');
  const passwordid = document.getElementById('password');
  const confirmpassword = document.getElementById('confirmPassword');

  const error1 = document.getElementById('error1');
  const error2 = document.getElementById('error2');
  const error3 = document.getElementById('error3');
  const error4 = document.getElementById('error4');
  const error5 = document.getElementById('error5');

  const signform = document.getElementById('signform');

  //  Final Name Validation (Instagram style)
  function nameValidate() {
    const name = nameid.value.trim();
    const pattern = /^[A-Za-z\s]+$/;

    if (name === "") {
      error1.innerText = "Full Name is required.";
      error1.style.display = "block";
      return false;
    } else if (name.length < 3) {
      error1.innerText = "Name must be at least 3 characters.";
      error1.style.display = "block";
      return false;
    } else if (name.length > 30) {
      error1.innerText = "Name must not exceed 30 characters.";
      error1.style.display = "block";
      return false;
    } else if (!pattern.test(name)) {
      error1.innerText = "Only letters and spaces allowed.";
      error1.style.display = "block";
      return false;
    } else {
      error1.style.display = "none";
      return true;
    }
  }

  function emailValidate() {
    const email = emailid.value.trim();
    const pattern = /^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/;
    if (!pattern.test(email)) {
      error2.innerText = "Enter a valid email address.";
      error2.style.display = "block";
      return false;
    } else {
      error2.style.display = "none";
      return true;
    }
  }

  function phoneValidate() {
    const phone = phoneid.value.trim();
    if (!/^\d{10}$/.test(phone)) {
      error3.innerText = "Enter a 10-digit phone number.";
      error3.style.display = "block";
      return false;
    } else {
      error3.style.display = "none";
      return true;
    }
  }

  function passwordValidate() {
    const pass = passwordid.value;
    const confirm = confirmpassword.value;
    const alpha = /[a-zA-Z]/;
    const digit = /\d/;

    if (pass.length < 8) {
      error4.innerText = "Password must be at least 8 characters.";
      error4.style.display = "block";
      return false;
    } else if (!alpha.test(pass) || !digit.test(pass)) {
      error4.innerText = "Password must include letters and digits.";
      error4.style.display = "block";
      return false;
    } else {
      error4.style.display = "none";
    }

    if (pass !== confirm) {
      error5.innerText = "Passwords do not match.";
      error5.style.display = "block";
      return false;
    } else {
      error5.style.display = "none";
      return true;
    }
  }

  // Form validation trigger
  signform.addEventListener('submit', function (e) {
    const validName = nameValidate();
    const validEmail = emailValidate();
    const validPhone = phoneValidate();
    const validPassword = passwordValidate();

    if (!validName || !validEmail || !validPhone || !validPassword) {
      e.preventDefault();
    }
  });

  // Show/Hide password toggle
  function setupToggle(inputId, toggleId) {
    const input = document.getElementById(inputId);
    const toggle = document.getElementById(toggleId);

    toggle.addEventListener("click", () => {
      if (input.type === "password") {
        input.type = "text";
        toggle.textContent = "HIDE";
      } else {
        input.type = "password";
        toggle.textContent = "SHOW";
      }
    });
  }

  setupToggle("password", "togglePassword");
  setupToggle("confirmPassword", "toggleConfirm")
  </script>
</body>
</html>
